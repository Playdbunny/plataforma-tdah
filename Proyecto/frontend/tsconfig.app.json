{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    // ðŸ”‘ React 17+/18 con JSX automÃ¡tico
    "jsx": "react-jsx",

    // ResoluciÃ³n moderna para Vite
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Calidad de tipos
    "strict": true,
    "noEmit": true,

    // Compatibilidad
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // ðŸ”‘ Asegura tipos de React y Vite en el proyecto
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src"]
}
